{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "generators": {
    "@schematics/angular:component": {
      "style": "none",
      "skipTests": true,
      "unitTestRunner": "none"
    },
    "@nx/angular:application": {
      "style": "none",
      "linter": "eslint",
      "unitTestRunner": "none",
      "e2eTestRunner": "none"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "none"
    },
    "@nx/angular:component": {
      "style": "none",
      "skipTests": true
    }
  },
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "@nx/eslint:lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    }
  },
  "defaultProject": "guide",
  "defaultBase": "main"
}
